<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/webflow 
		http://www.springframework.org/schema/webflow/spring-webflow.xsd">

	<on-start>
		<evaluate expression="dishController.createDish()" result="flowScope.dish" />
	</on-start>
		
	<view-state id="createDish" model="dish" view="toCreateDish">
		<on-entry>
			<evaluate expression="dishController.createDishAdditives()" result="viewScope.dishAdditives" />
		</on-entry> 		
		<transition on="selectAdditiveType" >
			<evaluate expression="dishController.selectAdditives(flowScope.dish.dishAdditives)"  result="flowScope.selectedAdditives"/>
			<render fragments="selectedAdditives"/>
		</transition>
		
		
	</view-state>		
		
	
		
</flow>